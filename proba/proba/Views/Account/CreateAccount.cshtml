

<form id="newaccountform">
    <div class="form-group">
        <label for="AccountNumber">Account number</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="AccountNumber" placeholder="00000000-00000000-00000000" aria-label="Username" aria-describedby="basic-addon1">
        </div>
    </div>

    <div class="form-group">
        <label for="Currency">Currency</label>
        <div class="input-group mb-3">
            <select id="Currency" class="form-control" >
                <option value="1">HUF</option>
                <option value="2">EUR</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="OwnerName">Owner Name</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="OwnerName" placeholder="Kis Janos" aria-label="OwnerName" aria-describedby="basic-addon1">
        </div>
    </div>


    <div class="form-group">
        <label for="ExistCreditLine">Account type</label>
        <div class="input-group mb-3">
            <select id="ExistCreditLine" class="form-control" >
                <option value="true">Current account</option>
                <option value="false">Cover account</option>
            </select>
        </div>
    </div>

    <input type="button" value="submit" onclick="createNewAccount()" />
</form>

@Scripts.Render("~/newAccount")
